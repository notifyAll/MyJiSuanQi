<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vivid.myjisuanqi.MainActivity">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/et_input"
        android:singleLine="false"
        android:background="@drawable/white_bg"
        android:editable="false"
        android:gravity="right|bottom"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        />

    <TableLayout
        android:stretchColumns="*"
        android:shrinkColumns="*"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/et_input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        >

        <TableRow
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="c"
                android:gravity="bottom|right"

                android:layout_width="wrap_content"
                android:textSize="17sp"
                android:layout_height="40sp"
                android:id="@+id/button_c"
                android:textColor="@android:color/black"
                android:background="@drawable/white_selector"

                android:paddingRight="13dp"
                android:paddingBottom="5dp"

                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                />


            <Button
                android:text="del"
                android:gravity="bottom|right"

                android:layout_width="wrap_content"
                android:textSize="17sp"
                android:layout_height="40sp"
                android:id="@+id/button_del"
                android:textColor="@android:color/black"
                android:background="@drawable/white_selector"

                android:paddingRight="13dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"/>

            <Button
                android:text="/"
                android:gravity="bottom|right"
                android:layout_width="wrap_content"
                android:textSize="17sp"
                android:layout_height="40sp"
                android:id="@+id/button_chu"
                android:textColor="@android:color/black"
                android:background="@drawable/white_selector"

                android:paddingRight="13dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"/>

            <Button
                android:text="*"
                android:gravity="bottom|right"
                android:layout_width="wrap_content"
                android:textSize="17sp"
                android:layout_height="40sp"
                android:id="@+id/button_cheng"
                android:textColor="@android:color/black"
                android:background="@drawable/white_selector"
                android:paddingRight="13dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"/>
        </TableRow>

        <TableRow
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="7"
                android:gravity="bottom|right"
                android:layout_width="wrap_content"
                android:textSize="17sp"
                android:layout_height="40sp"
                android:id="@+id/button_7"
                android:textColor="@android:color/black"
                android:background="@drawable/white_selector"

                android:paddingRight="13dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"/>

            <Button
                android:text="8"
                android:gravity="bottom|right"
                android:layout_width="wrap_content"
                android:textSize="17sp"
                android:layout_height="40sp"
                android:id="@+id/button_8"
                android:textColor="@android:color/black"
                android:background="@drawable/white_selector"

                android:paddingRight="13dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                />

            <Button
                android:text="9"
                android:gravity="bottom|right"
                android:layout_width="wrap_content"
                android:textSize="17sp"
                android:layout_height="40sp"
                android:id="@+id/button_9"
                android:textColor="@android:color/black"
                android:background="@drawable/white_selector"

                android:paddingRight="13dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                />

            <Button
                android:text="-"
                android:gravity="bottom|right"
                android:layout_width="wrap_content"
                android:textSize="17sp"
                android:layout_height="40sp"
                android:id="@+id/button_jian"
                android:textColor="@android:color/black"
                android:background="@drawable/white_selector"
                android:paddingRight="13dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                />
        </TableRow>

        <TableRow
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="4"
                android:gravity="bottom|right"
                android:layout_width="wrap_content"
                android:textSize="17sp"
                android:layout_height="40sp"
                android:id="@+id/button_4"
                android:textColor="@android:color/black"
                android:background="@drawable/white_selector"
                android:paddingRight="13dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                />

            <Button
                android:text="5"
                android:gravity="bottom|right"
                android:layout_width="wrap_content"
                android:textSize="17sp"
                android:layout_height="40sp"
                android:id="@+id/button_5"
                android:textColor="@android:color/black"
                android:background="@drawable/white_selector"
                android:paddingRight="13dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                />

            <Button
                android:text="6"
                android:gravity="bottom|right"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:id="@+id/button_6"
                android:textColor="@android:color/black"
                android:background="@drawable/white_selector"
                android:paddingRight="13dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                />

            <Button
                android:text="+"
                android:gravity="bottom|right"
                android:layout_width="wrap_content"
                android:textSize="17sp"
                android:layout_height="40sp"
                android:id="@+id/button_jia"
                android:textColor="@android:color/black"
                android:background="@drawable/white_selector"
                android:paddingRight="13dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                />
        </TableRow>

        <TableRow
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="1"
                android:gravity="bottom|right"
                android:layout_width="wrap_content"
                android:textSize="17sp"
                android:layout_height="40sp"
                android:id="@+id/button_1"
                android:textColor="@android:color/black"
                android:background="@drawable/white_selector"
                android:paddingRight="13dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                />

            <Button
                android:text="2"
                android:gravity="bottom|right"
                android:layout_width="wrap_content"
                android:textSize="17sp"
                android:layout_height="40sp"
                android:id="@+id/button_2"
                android:textColor="@android:color/black"
                android:background="@drawable/white_selector"
                android:paddingRight="13dp"
                android:paddingBottom="5dp"

                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                />

            <Button
                android:text="3"
                android:gravity="bottom|right"
                android:layout_width="wrap_content"
                android:textSize="17sp"
                android:layout_height="40sp"
                android:id="@+id/button_3"
                android:textColor="@android:color/black"
                android:background="@drawable/white_selector"
                android:paddingRight="13dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                />

        </TableRow>

        <TableRow
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="0"
                android:gravity="bottom|right"
                android:layout_width="wrap_content"
                android:textSize="17sp"
                android:layout_height="40sp"
                android:id="@+id/button_0"
                android:layout_span="2"
                android:textColor="@android:color/black"
                android:background="@drawable/white_selector"
                android:paddingRight="13dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                />


            <Button
                android:text="."
                android:gravity="bottom|right"
                android:layout_width="wrap_content"
                android:textSize="17sp"
                android:layout_height="40sp"
                android:id="@+id/button_dian"
                android:textColor="@android:color/black"
                android:background="@drawable/white_selector"
                android:paddingRight="13dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                />

            <Button
                android:text="="
                android:gravity="bottom|right"
                android:layout_width="wrap_content"
                android:textSize="17sp"
                android:layout_height="40sp"
                android:id="@+id/button_deng"
                android:textColor="@android:color/black"
                android:background="@drawable/orange_selector"
                android:paddingRight="13dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                />
        </TableRow>
    </TableLayout>

</RelativeLayout>
